header .song_side .content{
    width: 90%;
    height: 30%;
    margin: auto;
    /* border: 1px solid white; */
    padding-top: 20px;
}
header .song_side .content h1{
    font-size: 30px;
    font-weight: 600;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    color: white;
}
header .song_side .content p{
    font-size: 15px;
    font-weight: 400;
    font-family:Arial, Helvetica, sans-serif;
    color: #B2B2B2;
    margin-top: 20px;
    /* margin: 5px; */
}
header .song_side .content .buttons{
    margin-top: 15px;
}
header .song_side .content .buttons button{
    width: 80px;
    height: 40px;
    /* border: 2px solid red; */
    outline: none;
    font-size: 12px;
    font-weight: 600;
    border-radius: 20px;
    margin-right: 10px;
    background: #1ED760;
    color: black;
    cursor: pointer;
    transition: .3s linear;
}
header .song_side .content .buttons button:nth-child(1):hover{
    width: 82px;
    height: 42px;
    font-size: 15px;
}
header .song_side .content .buttons button:nth-child(2){
    border: 1px solid white;
    background: none;
    color: white;
}
header .song_side .content .buttons button:nth-child(2):hover{
    width: 82px;
    height: 42px;
    font-size: 15px;
}


header .song_side .popular_artists{
    width: 90%;
    height: auto;
    /* border: 1px solid white; */
    margin: auto;
    margin-top: 20px;
}
header .song_side .popular_artists .h4{
    display: flex;
    align-items: center;
    justify-content: space-between;

}
header .song_side .popular_artists .h4 h4{
    color: white;
    font-size: 20px;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
header .song_side .popular_artists .h4 .bi{
    color: #B2B2B2;
    cursor: pointer;
    transition: .3s linear;
}
header .song_side .popular_artists .h4 .bi:hover{
    color: white;
}
header .song_side .popular_artists .top-artist{
    width: 100%;
    height: auto;
    margin-top: 15px;
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
}
header .song_side .popular_artists .top-artist::-webkit-scrollbar{
    display: none;
}
header .song_side .popular_artists .top-artist li{
    list-style-type: none;
    position: relative;
    min-width: 180px;
    height: 250px;
    background-color: #171717;
    border-radius: 10px;
    margin-right: 20px;
    cursor: pointer;
    transition: .3s linear;
}
header .song_side .popular_artists .top-artist li:hover{
    background: #232323;
}
header .song_side .popular_artists .top-artist li img{
    width: 160px;
    height: 160px;
    margin-left: 10px;
    margin-top: 10px;
    border-radius: 50%;
    display: block;
    /* position: absolute; */
}
header .song_side .popular_artists .top-artist li h5{
    padding: 5px 0px 0px 5px;
    line-height: 1.5;
    font-size: 18px;
    margin: 10px 0px 0px 10px;
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: white;
    max-width: 160px;
    overflow: hidden;
    text-overflow: ellipsis; /* Display ellipsis (...) for overflow text */
    white-space: nowrap; 
    /* position: relative; */
}

